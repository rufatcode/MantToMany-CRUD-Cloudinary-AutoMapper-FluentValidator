@model PostCategoryVM
@{
    ViewBag.Title = "Post";
}
<div class="form-material container mt-5 w-50">
    <h1 class="text-primary my-3">Category Table</h1>
    <a asp-action="Index" class="btn btn-danger">Go To Index</a>
    <div class="text-danger my-3" asp-validation-summary="All">

    </div>
            <form enctype="multipart/form-data"  method="post">
                <div class="form-group form-default">
                    <input asp-for="Name" class="form-control">
                    <span class="form-bar"></span>
                    <label class="float-label">Category Name</label>
                </div>
                <div class="form-group form-default">
                    <label class="my-2">Parent</label>
                    <select asp-for="ParentId" asp-items="@ViewBag.ParentCategories"  class="form-control">
                        <option selected value=@null>-</option>
                    </select>
                    <span class="form-bar"></span>

                </div>
                <div class="form-group form-default">
                    <label class=" my-2">Category Image</label>
                    <input asp-for="Image" class="form-control">
                    <span class="form-bar"></span>

                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
    
</div>



